<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/verifyCodeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/guest_screens_margin_horizontal"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/guest_screens_text_margin_top"
        android:text="Verification Code"/>

    <TextView
        android:id="@+id/enterCodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/guest_screens_default_text_size"
        android:textColor="@color/grey"
        app:layout_constraintTop_toBottomOf="@id/verifyCodeTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="@dimen/guest_screens_margin_horizontal"
        android:layout_marginTop="@dimen/guest_screens_default_margin_top"
        android:text="Please enter Code sent to "/>

    <TextView
        android:id="@+id/phoneNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/guest_screens_default_text_size"
        android:textColor="@color/deep_blue"
        app:layout_constraintTop_toBottomOf="@id/verifyCodeTextView"
        app:layout_constraintStart_toEndOf="@id/enterCodeTextView"
        android:layout_marginTop="@dimen/guest_screens_default_margin_top"
        android:text="+7 972 673 54 23"/>

    <ImageView
        android:id="@+id/verifyCodeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/enterCodeTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/guest_screens_margin_horizontal"
        android:layout_marginTop="@dimen/guest_screens_image_view_margin_top"
        android:src="@drawable/ic_confirm_code_image"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/codeTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="76dp"
        android:layout_marginTop="15dp"
        android:hint="Enter Code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verifyCodeImageView"
        app:boxCornerRadiusBottomEnd="@dimen/default_corner_radius"
        app:boxCornerRadiusBottomStart="@dimen/default_corner_radius"
        app:boxCornerRadiusTopEnd="@dimen/default_corner_radius"
        app:boxCornerRadiusTopStart="@dimen/default_corner_radius"
        android:textColorHint="@color/grey"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/codeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:textSize="30sp"
            android:gravity="center"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/verifyButton"
        android:layout_width="0dp"
        android:layout_height="61dp"
        app:layout_constraintTop_toBottomOf="@id/codeTextInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/guest_screens_margin_horizontal"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Verify"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/default_corner_radius" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/verifyButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="20sp"
        android:textColor="@color/deep_orange"
        android:textStyle="bold"
        android:text="Resend Code"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>