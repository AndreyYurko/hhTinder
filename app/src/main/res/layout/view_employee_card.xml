<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintTop_toBottomOf="@id/searchTextInputLayout"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="15dp"
    android:background="@drawable/main_relative_layout_background">

    <View
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:background="@drawable/employee_top_background"/>


    <TextView
        android:id="@+id/job_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java developer"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="32sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/iconImageShown"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/rounded_image"
        android:clipToOutline="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/employee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Li Kim"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="88dp"
        android:layout_marginStart="175dp"/>

    <TextView
        android:id="@+id/employee_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salary: 100 $ / h"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="115dp"
        android:layout_marginStart="175dp"/>

    <TextView
        android:id="@+id/employee_gender_and_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Man, 25 years old"
        android:textColor="@color/grey"
        android:textSize="20sp"
        android:layout_marginTop="170dp"
        android:layout_marginStart="175dp"/>

    <TextView
        android:id="@+id/education_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="228dp"
        android:text="Education"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/education_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="260dp"
        android:text="Yonsei University, 2004 - 2008"
        android:textColor="@color/grey"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/work_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="290dp"
        android:text="Work experience"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/work_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="320dp"
        android:text="5 years, OOO Gazprom"
        android:textColor="@color/grey"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/projects_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="345dp"
        android:text="Projects: Autoclicker, Shortlinker, Online-shop “qwerty”"
        android:textColor="@color/grey"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>