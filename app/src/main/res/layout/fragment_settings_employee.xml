<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/cancelParamsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_close_24"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/cancelParamsButton"
        app:layout_constraintBottom_toBottomOf="@id/cancelParamsButton"
        app:layout_constraintStart_toEndOf="@id/cancelParamsButton"
        android:text="Parameters"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textColor="#3D3D3D"/>

    <TextView
        android:id="@+id/salaryText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:text="Salary, $ / h : 0 - 200"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cancelParamsButton" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/salaryRangeSlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:stepSize="5"
        android:valueFrom="0"
        android:valueTo="200"
        app:labelBehavior="withinBounds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cancelParamsButton"
        app:thumbRadius="10dp"
        app:tickColorActive="@color/deep_blue"
        app:tickColorInactive="#BDBDBD"
        app:trackColorActive="@color/deep_blue"
        app:trackColorInactive="#BDBDBD"
        app:values="@array/settingsSalaryRangeSliderValues" />

    <View
        android:id="@+id/firstDivideLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="#DADADA"
        app:layout_constraintTop_toBottomOf="@id/salaryRangeSlider" />

    <TextView
        android:id="@+id/workExperienceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:text="Work experience, years : at least 2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstDivideLine" />

    <com.google.android.material.slider.Slider
        android:id="@+id/workExperienceRangeSlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="12dp"
        android:stepSize="1"
        android:valueFrom="0"
        android:valueTo="20"
        app:labelBehavior="withinBounds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/firstDivideLine"
        app:thumbRadius="10dp"
        app:tickColorActive="@color/deep_blue"
        app:tickColorInactive="#BDBDBD"
        app:trackColorActive="@color/deep_blue"
        app:trackColorInactive="#BDBDBD" />

    <View
        android:id="@+id/secondDivideLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="#DADADA"
        app:layout_constraintTop_toBottomOf="@id/workExperienceRangeSlider" />

    <TextView
        android:id="@+id/workingHoursText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="24dp"
        android:text="Working hours, h : 8 - 12"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondDivideLine" />

    <com.google.android.material.slider.RangeSlider
        android:id="@+id/workingHoursRangeSlider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="6dp"
        android:layout_marginTop="12dp"
        android:stepSize="1"
        android:valueFrom="0"
        android:valueTo="60"
        app:labelBehavior="withinBounds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondDivideLine"
        app:thumbRadius="10dp"
        app:tickColorActive="@color/deep_blue"
        app:tickColorInactive="#BDBDBD"
        app:trackColorActive="@color/deep_blue"
        app:trackColorInactive="#BDBDBD"
        app:values="@array/settingsWorkingHoursRangeSliderValues" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="61dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="76dp"
        android:text="Show 123 Vacancies"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintCircleRadius="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>