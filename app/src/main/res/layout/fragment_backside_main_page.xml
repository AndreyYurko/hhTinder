<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/design_default_color_primary">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="36dp"
        android:textColor="@color/white"
        android:text="SPbU"
        android:textStyle="bold"
        android:textSize="36sp"
        />

    <TextView
        android:id="@+id/job"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="72dp"
        android:textColor="@color/white"
        android:text="job: lecture. General English, Deutsch als Fremdsprache, Français langue étrangère, Business English, Deutsch für den Beruf, Français professionnel, Communication skills training, telc examinations и intercultural communication."
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/salary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/job"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/white"
        android:text="salary: 100-120; annual bonuses"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/workExperience"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/salary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="18dp"
        android:textColor="@color/white"
        android:text="work experience: 5 years."
        android:textStyle="bold"
        android:textSize="18sp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>